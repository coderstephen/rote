require "cargo"
default "debug"


task("debug", function()
    print "Building debug version..."
    cargo.build()
end)

task("release", function()
    cargo.build {
        release = true
    }
end)

task("clean", function()
    cargo.clean()
end)

task("test", function()
    for _, file in ipairs(glob("tests/*.lua")) do
        print("[" .. file .. "]")
        local success, err = pcall(function()
            return dofile(file)
        end)

        if not success then
            print "FAIL!"
            print("Reason: " .. err)
        else
            print "PASS"
        end
    end
end)
